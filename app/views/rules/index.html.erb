<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Rules</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Content</th>
        <th>Document</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @rules.each do |rule| %>
        <tr>
          <td><%= rule.name %></td>
          <td><%= rule.content %></td>
          <td><%= image_tag rule.document, size: "100x100" %></td>
          <td><%= link_to 'See better', rails_blob_path(rule.document, disposition: "preview") %></td>
          <td><%= link_to 'Download', rails_blob_path(rule.document, disposition: "attachment") %></td>

          <td><%= link_to 'Show', rule %></td>
          <td><%= link_to 'Edit', edit_rule_path(rule) %></td>
          <td><%= link_to 'Destroy', rule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Rule', new_rule_path %>

</div>
